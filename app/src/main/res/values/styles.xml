<resources>

    <!-- Dark theme -->

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/darkThemePrimaryColor</item>
        <item name="colorPrimaryDark">@color/darkThemePrimaryDarkColor</item>
        <item name="colorAccent">@color/darkThemeAccentColor</item>
        <item name="colorSecondaryDark">@color/darkThemeSecondaryDarkColor</item>
        <item name="colorSecondaryAccent">@color/darkThemeSecondaryAccentColor</item>
        <item name="android:textColorHint">@color/darkThemeTextColorHint</item>
        <item name="android:textColor">@color/darkThemeTextColor</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColor</item>
        <item name="android:textColorSecondary">@color/darkThemeTextColor</item>
        <item name="alertDialogTheme">@style/DarkDialogTheme</item>
        <item name="android:alertDialogTheme">@style/DarkDialogTheme</item>
        <item name="shortStatsBackground">@color/darkThemePrimaryColor</item>
        <item name="trackLineColor">@color/defaultGoogleCurrentLocationColor</item>
        <item name="markersColor">@color/defaultGoogleCurrentLocationColor</item>
        <item name="googleMapStyleJson">@string/mapStyleDarkTheme</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="DarkDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/theme_dark_dialog_background</item>
        <item name="android:colorAccent">@color/darkThemeAccentColor</item>
        <item name="android:textColor">@color/darkThemeTextColor</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColor</item>
        <item name="android:textColorSecondary">@color/darkThemeTextColor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/DarkNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DarkPositiveButtonStyle</item>
        <item name="android:colorControlActivated">@color/darkThemeAccentColor</item>
        <item name="textColorAlertDialogListItem">@color/darkThemeTextColor</item>
    </style>

    <style name="DarkNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/darkThemeTextColor</item>
    </style>

    <style name="DarkPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/darkThemeTextColor</item>
    </style>

    <!-- Light theme -->

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/lightThemePrimaryColor</item>
        <item name="colorPrimaryDark">@color/lightThemePrimaryDarkColor</item>
        <item name="colorAccent">@color/lightThemeAccentColor</item>
        <item name="colorSecondaryDark">@color/lightThemeSecondaryDarkColor</item>
        <item name="colorSecondaryAccent">@color/lightThemeSecondaryAccentColor</item>
        <item name="android:textColor">@color/lightThemeTextColor</item>
        <item name="android:textColorPrimary">@color/lightThemeTextColor</item>
        <item name="android:textColorSecondary">@color/lightThemeTextColor</item>
        <item name="alertDialogTheme">@style/LightDialogTheme</item>
        <item name="android:alertDialogTheme">@style/LightDialogTheme</item>
        <item name="shortStatsBackground">@color/lightThemePrimaryColor</item>
        <item name="trackLineColor">@color/defaultGoogleCurrentLocationColor</item>
        <item name="markersColor">@color/defaultGoogleCurrentLocationColor</item>
        <item name="googleMapStyleJson">@string/mapStyleDarkTheme</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="LightDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/theme_light_dialog_background</item>
        <item name="android:colorAccent">@color/lightThemeAccentColor</item>
        <item name="android:textColor">@color/lightThemeTextColor</item>
        <item name="android:textColorPrimary">@color/lightThemeTextColor</item>
        <item name="android:textColorSecondary">@color/lightThemeTextColor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/LightNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/LightPositiveButtonStyle</item>
        <item name="android:colorControlActivated">@color/lightThemeAccentColor</item>
        <item name="textColorAlertDialogListItem">@color/lightThemeTextColor</item>
    </style>

    <style name="LightNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/lightThemeTextColor</item>
    </style>

    <style name="LightPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/lightThemeTextColor</item>
    </style>

</resources>
