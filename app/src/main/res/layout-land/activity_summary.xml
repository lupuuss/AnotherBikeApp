<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.modules.summary.SummaryActivity"
    android:id="@+id/landscapeConstraintSummary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSummary"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="?attr/colorSecondaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mapFrameSummary"/>

    <include
        android:id="@+id/mapFrameSummary"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/toolbarSummary"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/map_frame"/>

    <LinearLayout
        android:id="@+id/divider"
        android:background="?android:colorPrimaryDark"
        android:orientation="vertical"
        android:layout_width="20dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/statsFragmentScrollView"
        app:layout_constraintTop_toBottomOf="@id/toolbarSummary"
        app:layout_constraintBottom_toBottomOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameLabelWrapper"
        android:background="?android:colorPrimaryDark"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/toolbarSummary"
        app:layout_constraintBottom_toTopOf="@+id/statsFragmentScrollView">
        <TextView
            android:id="@+id/nameLabel"
            android:text="@string/nameEditTextTitle"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/routeNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:inputType="text"
            android:hint="@string/enterName"
            android:textColorHint="?android:textColor"
            android:layout_marginStart="30dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/summaryProgressBar"
        android:visibility="invisible"
        android:elevation="2dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminateTint="?android:colorAccent"
        android:layout_margin="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/statsFragmentScrollView"
        app:layout_constraintTop_toTopOf="@+id/statsFragmentScrollView"
        app:layout_constraintStart_toStartOf="@+id/statsFragmentScrollView"
        app:layout_constraintEnd_toEndOf="@+id/statsFragmentScrollView"/>

    <ScrollView
        android:id="@+id/statsFragmentScrollView"
        android:layout_width="290dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nameLabelWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/statsFragmentWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <fragment
                android:id="@+id/statsFragment"
                android:name="ga.lupuss.anotherbikeapp.ui.fragments.StatsFragment"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                tools:layout="@layout/fragment_stats" />
        </FrameLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>