<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.modules.login.LoginActivity"
    android:background="?android:colorPrimary">

    <TextView
        android:id="@+id/signInTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/login"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/emailEditText"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_account_circle_24dp"
        android:drawablePadding="10dp"
        android:layout_width="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="?android:colorPrimary"
        android:hint="@string/email"
        android:background="?android:textColor"
        app:layout_constraintTop_toBottomOf="@id/signInTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_key_24dp"
        android:drawablePadding="10dp"
        android:textColor="?android:colorPrimary"
        android:layout_width="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/password"
        android:background="?android:textColor"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:colorPrimaryDark"
        android:text="@string/login"
        android:layout_marginTop="30dp"
        android:onClick="onClickSignIn"
        app:layout_constraintStart_toStartOf="@id/passwordEditText"
        app:layout_constraintEnd_toEndOf="@id/passwordEditText"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText"/>

    <Button
        android:id="@+id/createNewAccountButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:colorPrimaryDark"
        android:text="@string/create_new_account"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/passwordEditText"
        app:layout_constraintEnd_toEndOf="@id/passwordEditText"
        app:layout_constraintTop_toBottomOf="@id/signInButton"/>

    <Button
        android:id="@+id/noAccountButton"
        android:background="?android:colorPrimaryDark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/no_account"
        android:onClick="onClickUseWithoutAccount"
        app:layout_constraintStart_toStartOf="@id/passwordEditText"
        app:layout_constraintEnd_toEndOf="@id/passwordEditText"
        app:layout_constraintTop_toBottomOf="@id/createNewAccountButton" />
</android.support.constraint.ConstraintLayout>