<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ga.lupuss.anotherbikeapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".AnotherBikeApp"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GreyTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".ui.modules.main.MainActivity" />

        <service
            android:name=".models.trackingservice.TrackingService"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.modules.tracking.TrackingActivity"
            android:label="@string/title_activity_tracking" />
        <activity
            android:name=".ui.modules.summary.SummaryActivity"
            android:label="@string/summary" />
        <activity
            android:name=".ui.modules.login.LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".ui.StartActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.modules.createaccount.CreateAccountActivity"
            android:label="@string/create_new_account" />
        <activity android:name=".ui.modules.settings.SettingsActivity"
            android:label="@string/settings"/>
    </application>

</manifest>